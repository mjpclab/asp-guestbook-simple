<style type="text/css">
*			{font-family:ו, sans-serif; font-size:9pt; color:#000000; background-color:transparent; line-height:150%;}
div.outerborder {width:<%=TableWidth%>px; padding:0px; margin-left:auto; margin-right:auto; text-align:left;}

body		{text-align:center; padding:5px; margin:0px; background-color:<%=PageBackColor%>; background-image:url(<%=PageBackImage%>);}
textarea	{border:solid 1px <%=TableBorderColor%>; background-color:#FFFFFF;}
input		{border:solid 1px <%=TableBorderColor%>; background-color:#FFFFFF;}

a:link		{color:<%=LinkNormal%>; text-decoration: none;}
a:visited	{color:<%=LinkVisited%>; text-decoration: none;}
a:active	{color:<%=LinkActive%>; text-decoration: none;}
a:hover		{color:<%=LinkHover%>; text-decoration: underline;}

table.onetopic{width:<%=TableWidth%>px; margin-top:20px; border:solid 1px <%=TableBorderColor%>; border-collapse:collapse; table-layout:fixed;}
table.reply	{width:<%=TableWidth-50%>px; border:dashed 1px <%=TableBorderColor%>; margin:20px; border-collapse:collapse; table-layout:fixed;}

tr.title	{height:25px;}
td.title	{text-align:left; padding-top:0px; padding-bottom:0px; color:<%=TableTitleColor%>; border:solid 1px <%=TableBorderColor%>; background-color:<%=TableTitleBGC%>; background-image:url(image/bar_blue.gif);}
td.noborder	{border-style:none; border-width:0px;}
td.centertitle{text-align:center; font-weight:bold;}

td.content	{text-align:left; overflow:hidden; color:<%=TableContentColor%>; border:solid 1px <%=TableBorderColor%>; background-color:<%=TableContentBGC%>; padding:5px; vertical-align:top;}

div.icons	{width:100%; text-align:right; margin:0px; padding:0px; border-width:0px;}

td.status	{text-align:left; height:25px;}
td.status	{text-align:left; padding-top:0px; padding-bottom:0px; color:<%=TableInfoColor%>; border:solid 1px <%=TableBorderColor%>; background-color:<%=TableInfoBGC%>; background-image:url(image/bar_blue2.gif);}

</style>
